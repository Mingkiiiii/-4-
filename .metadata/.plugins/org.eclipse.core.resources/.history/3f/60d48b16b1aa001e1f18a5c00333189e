package practice;

public class JavaBasicProblem03 {

	public static void main(String[] args) {
		
		
		        int example = 278;
		        int sum = 0;

		        // 각 자리수를 더하기
		        while (example > 0) {
		            int digit = example % 10; // 현재 자리수
		            sum += digit; // 자리수 더하기
		            example /= 10; // 다음 자리수로 이동
		        }

		        System.out.println("결과는: " + sum);
		        
		        // if문을 사용한 예제 코드
		        int example2 = 278;
		        int sum2 = 0;

		        // 각 자리수를 더하기
		        if (example2 > 0) {
		            int digit1 = example2 / 100; // 백의 자리수
		            int digit2 = (example2 / 10) % 10; // 십의 자리수
		            int digit3 = example2 % 10; // 일의 자리수
		            
		            sum2 = digit1 + digit2 + digit3;
		        }

		        System.out.println("결과는: " + sum2);
		        
		        // for문을 사용한 예제 코드
		        int example3 = 278;
		        int sum3 = 0;

		        // 각 자리

		    }
		


	


